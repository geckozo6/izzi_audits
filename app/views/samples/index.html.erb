<p id="notice"><%= notice %></p>
	<div class="row">
		<div class="col-sm-3">
			<h1 class="page-title">Muestreos</h1>
		</div>
		<div class="col-sm-4">
			<%= link_to '<i class="entypo-user-add"></i>Agregar'.html_safe, new_sample_path, class: 'btn btn-default btn-icon' %>
		</div>
	</div>
		
		
		<script type="text/javascript">
			jQuery( window ).load( function() {
			var $table2 = jQuery( "#table-2" );

			$table2.DataTable( {
				dom: 'Bfrtip',
				buttons: [
					
					{ extend: 'copyHtml5', exportOptions: { columns: ':visible' } },
					{ extend: 'csvHtml5', exportOptions: { columns: ':visible' } },
					{ extend: 'excelHtml5', exportOptions: { columns: ':visible' } },
					{ extend: 'pdfHtml5', exportOptions: { columns: ':visible' } },
            		{extend:'colvis', text: '<i class="entypo-eye"></i>'}
					//"colvis",

				],
				columnDefs: [ { targets: -1, visible: false } ]
			} );

			});
		</script>
			
		<table class="table table-bordered table-striped datatable" id="table-2">
			<thead>
				<tr>
					<th>
						<i class="entypo-info"></i>
					</th>
					<th>Folio</th>
					<th>Item</th>
					<th>Proveedor</th>
					<th>Razón Social</th>
					<th>AQL</th>
					<th>Tam. Lote</th>
					<th># Piezas</th>
					<th>Modelo Equipo</th>
					<th>Auditor</th>
					<th>Acciones</th>
				</tr>
			</thead>
			
			<tbody>
			    <% @samples.each do |sample| %>
			         <tr>
	 					<td>
	 						<%= link_to '<i class="entypo-info"></i>'.html_safe, sample, 
								class: "btn btn-info btn-xs" %>
	 					</td>
						<td><%= sample.delivery_folio %></td>
        				<td><%= sample.item %></td>
        				<td><%= sample.provider %></td>
        				<td><%= sample.business_name %></td>
        				<td><%= sample.aql.aql %></td>
        				<td><%= sample.lot_size %></td>
        				<td><%= sample.equipment.model %></td>
        				<td><%= sample.auditor.name %></td>
					    <td><%= sample.pieces.length %></td>
					    <td><%= sample.pieces.rejected.length %></td>
   						<td>
							<%= link_to '<i class="entypo-pencil"></i>Editar'.html_safe, edit_sample_path(sample), 
								class: "btn btn-default btn-sm btn-icon icon-left"  %>
							<%= link_to '<i class="entypo-cancel"></i>Borrar'.html_safe, sample, 
								class: "btn btn-danger btn-sm btn-icon icon-left", 
								method: :delete, 
								data: { confirm: '¿Desea eliminar este registro?' } %>
   						</td>
			         </tr>
			  <% end %>
			  
				<% if @samples.size== 0%>
					<em> No existen Muestreos</em>
				<% end %>
			</tbody>
		</table>